{
  "manifest_version": 2,
  "name": "Boost",
  "description": "This extension provides harvest-pivotal-basecamp linking.",
  "author": "Paul Mesnilgrente <paul.mesnilgrente@boost.co.nz>",
  "homepage_url": "https://www.github.com/boost/boost-browser-extension",
  "version": "0.0.1",
  "default_locale": "en",
  "icons": {
    "19":"19x19.png",
    "20":"20x20.png",
    "38":"38x38.png",
    "48":"48x48.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.pivotaltracker.com/*"],
      "js": ["pivotal.js"]
    },
    {
      "matches": ["https://basecamp.com/*"],
      "js": ["basecamp.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "pivotal_context.js",
      "basecamp_context.js"
    ]
  },
  "permissions": [
    "menus",
    "activeTab"
  ]
}
