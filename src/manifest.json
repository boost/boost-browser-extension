{
  "manifest_version": 2,
  "name": "Boost",
  "description": "This extension provides harvest-pivotal-basecamp linking.",
  "author": "Paul Mesnilgrente <paul.mesnilgrente@boost.co.nz>",
  "homepage_url": "https://www.github.com/boost/boost-browser-extension",
  "version": "1.0.0",
  "default_locale": "en",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "images/icons/16x16.png",
    "19": "images/icons/19x19.png",
    "20": "images/icons/20x20.png",
    "38": "images/icons/38x38.png",
    "48": "images/icons/48x48.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.pivotaltracker.com/*"],
      "js": ["content/pivotal.js"]
    },
    {
      "matches": ["https://basecamp.com/*/projects/*/messages/new"],
      "js": ["content/basecamp.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://github.com/*"],
      "js": ["content/github.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background/basecamp/context.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "images/icons/16x16.png",
      "19": "images/icons/19x19.png",
      "20": "images/icons/20x20.png",
      "38": "images/icons/38x38.png",
      "48": "images/icons/48x48.png"
    },
    "default_title": "Boost",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "menus",
    "activeTab",
    "clipboardWrite",
    "storage",
    "tabs"
  ]
}
